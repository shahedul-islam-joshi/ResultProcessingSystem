@model IEnumerable<ResultProcessingSystem.Models.Domain.Student>

@{
    ViewData["Title"] = "Student List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Student List</h2>
        <a asp-action="Add" class="btn btn-primary">Add New Student</a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning">No student records found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Photo</th>
                        <th>Reg. No</th>
                        <th>Name</th>
                        <th>Department</th>
                        <th>Email</th>
                        <th>Session</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td class="text-center">
                                @if (student.ProfilePicture != null)
                                {
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(student.ProfilePicture)"
                                         style="width:50px; height:50px; object-fit:cover; border-radius:50%;" />
                                }
                                else
                                {
                                    <div class="bg-secondary text-white rounded-circle d-inline-block text-center"
                                         style="width:50px; height:50px; line-height:50px; font-size: 12px;">
                                        N/A
                                    </div>
                                }
                            </td>
                            <td>@student.Registration</td>
                            <td>@student.Name</td>
                            <td>@student.Department</td>
                            <td>@student.Email</td>
                            <td>@student.session</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-info text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>